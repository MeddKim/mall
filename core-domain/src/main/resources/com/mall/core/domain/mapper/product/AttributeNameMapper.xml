<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mall.core.domain.mapper.product.AttributeNameMapper">


  <sql id="Base_Column_List">
    id, name, type,
    <include refid="com.mall.core.domain.mapper.CommonSql.Common_Column_List"/>
  </sql>

  <sql id="attribute_name_if_sql">
    <if test="fuzzyName != null">
      AND name LIKE CONCAT(#{fuzzyName},'%')
    </if>
    <if test="type != null">
      AND  type = #{type}
    </if>
    <if test="isDeleted != null">
      AND is_deleted = #{isDeleted}
    </if>
    <if test="isAvailable != null">
      AND is_available = #{isAvailable}
    </if>
    <if test="isDeleted == null">
      AND is_deleted = FALSE
    </if>
    <if test="isAvailable == null">
      AND is_available = TRUE
    </if>
  </sql>

  <sql id="attribute_name_order_sql">
    <if test="createTimeDesc != null">
      ORDER BY create_time DESC
    </if>
    <if test="createTimeAsc != null">
      ORDER BY create_time ASC
    </if>
  </sql>

  <select id="selectByPrimaryKey" parameterType="java.lang.Long" resultType="com.mall.core.domain.entity.product.AttributeName">
    select
    <include refid="Base_Column_List" />
    from attribute_name
    where id = #{id}
  </select>

  <insert id="insert" useGeneratedKeys="true" keyProperty="id" parameterType="com.mall.core.domain.entity.product.AttributeName">
    insert into attribute_name
    <trim prefix="(" suffix=")" suffixOverrides=",">
      <if test="id != null">
        id,
      </if>
      <if test="name != null">
        name,
      </if>
      <if test="type != null">
        type,
      </if>
      <include refid="com.mall.core.domain.mapper.CommonSql.Common_Insert_Key"/>
    </trim>
    <trim prefix="values (" suffix=")" suffixOverrides=",">
      <if test="id != null">
        #{id},
      </if>
      <if test="name != null">
        #{name},
      </if>
      <if test="type != null">
        #{type},
      </if>
      <include refid="com.mall.core.domain.mapper.CommonSql.Common_Insert_Value"/>
    </trim>
  </insert>

  <update id="update" parameterType="com.mall.core.domain.entity.product.AttributeName">
    update attribute_name
    <set>
      <if test="name != null">
        name = #{name},
      </if>
      <if test="type != null">
        type = #{type},
      </if>
      <include refid="com.mall.core.domain.mapper.CommonSql.Common_Update_Sql"/>
    </set>
    where id = #{id}
  </update>

  <select id="findByParams" parameterType="map" resultType="com.mall.core.domain.entity.product.AttributeName">
    SELECT
    <include refid="Base_Column_List" />
    FROM attribute_name
    <where>
      <include refid="attribute_name_if_sql"/>
    </where>
    <include refid="attribute_name_order_sql"/>
  </select>

  <cache />
</mapper>